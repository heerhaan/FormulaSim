@model FormuleCirkelEntity.Models.Driver

@{
    ViewData["Title"] = "Archive";
    string archive = "Archive";
    if (Model.Archived) { archive = "Unarchive"; }
}

<div class="d-inline-block">
    <h1>@archive</h1>
    <div>
        <h4>Are you sure you want to move @Model.Name?</h4>
        <dl class="row mt-3 text-left">
            <dt class="col-md-4">
                Number
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.DriverNumber)
            </dd>
            <dt class="col-md-4">
                Name
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@archive" class="btn fullwidth" />
        </form>
    </div>

    <div class="float-left mt-2">
        <a class="btn" asp-action="Index">
            <i class="fas fa-arrow-alt-circle-left"></i> Back
        </a>
    </div>
</div>
