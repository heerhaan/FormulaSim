@model IEnumerable<FormuleCirkelEntity.Models.Rubber>

@{
    ViewData["Title"] = "Rubbers";
    bool isAdmin = this.User.IsInRole(Constants.RoleAdmin);
}

<div class="d-inline-block">
    <h1>Tyre Manufacturers</h1>

    <div class="flex-row justify-content-between index-btns">
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn mr-auto"><i class="fas fa-plus"></i><span class="ml-1">New</span></a>
        }
        <a asp-action="ArchivedRubbers" class="btn"><i class="fas fa-archive"></i><span class="ml-1">Archive</span></a>
    </div>

    <table class="ctable fullborder fullwidth min-width-index-table">
        <thead class="fullborder">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaceMod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinWearMod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxWearMod)
                </th>
                <th class="w-10">Edit</th>
                <th class="w-10">Archive</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="background-color:@(item.Colour);color:@(item.Accent);">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaceMod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinWearMod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxWearMod)
                    </td>
                    @if (isAdmin)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RubberId">
                                <i class="fas fa-wrench fa-2x"></i>
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.RubberId">
                                <i class="fas fa-trash-alt fa-2x"></i>
                            </a>
                        </td>
                    } else { <td></td><td></td>}
                </tr>
            }
        </tbody>
    </table>
</div>
